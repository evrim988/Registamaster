@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
   var user = session.GetUser();
}
<input type="hidden" id="auth" value="@Convert.ToInt32(user.Authorization)" />
<h1>Projeler</h1>

<style>


</style>
<link href="/Modernize/DevextremeCss/css/dx.common.css" rel="stylesheet" />
<link href="~/Modernize/DevextremeCss/css/dx.light.css" rel="stylesheet" />

<div class="main-content">
    <div class="row">
        <div class="col-12" style="padding-top: 40px; padding-right: 40px; padding-left: 40px;">
            <div class="card card-primary">
                <div class="card-header">
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <h3>Projeler</h3>

                        <div class="demo-container">
                            <div id="projectGridContainer"></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!--Proje Ekle Modal-->
<div class="modal fade" id="AddProject" aria-labelledby="AddProjectLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
   <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content" id="clear">
         <div class="modal-header">
            <h1 class="modal-title fs-5" id="AddProjectLabel">Proje Ekle</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" id="CloseModal" onclick="ClearModal()" aria-label="Close"></button>
         </div>
         <div class="modal-body">
            <form>
               <div class="row">
                  <div class="col-12">
                     <label style="font-weight:bold;">Proje Adı</label>
                     <input class="form-control" id="addProjectName" />
                  </div>
                  <div class="col-12 mt-2">
                     <label style="font-weight:bold;">Proje Açıklama</label>
                     <textarea class="form-control" id="addProjectDescription" rows="4"></textarea>
                  </div>
               </div>
            </form>
         </div>
         <div class="modal-footer">
            <button type="button" data-bs-dismiss="modal" onclick="ClearModal()" class="btn btn-secondary">Kapat</button>
            <button type="button" onclick="SaveProject()" class="btn btn-primary">Kaydet</button>
         </div>
      </div>
   </div>
</div>

<!--Proje Düzenle Modal-->
<div class="modal fade" id="EditProject" aria-labelledby="EditProjectLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
   <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content" id="clear">
         <div class="modal-header">
            <h1 class="modal-title fs-5" id="EditProjectLabel">Proje Düzenle</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" id="CloseModal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
            <form>
               <div class="row">
                  <input class="form-control" type="hidden" id="editProjectID" />
                  <div class="col-12">
                     <label style="font-weight:bold;">Proje Adı</label>
                     <input class="form-control" id="editProjectName" />
                  </div>
                  <div class="col-12 mt-2">
                     <label style="font-weight:bold;">Proje Açıklama</label>
                     <textarea class="form-control" id="editProjectDescription" rows="4"></textarea>
                  </div>
               </div>
            </form>
         </div>
         <div class="modal-footer">
            <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
            <button type="button" onclick="SaveProjectUpdate()" class="btn btn-primary">Kaydet</button>
         </div>
      </div>
   </div>
</div>

<!--Proje Notu Ekle Modal-->
<div class="modal fade" id="AddProjectNote" aria-labelledby="AddProjectNoteLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
