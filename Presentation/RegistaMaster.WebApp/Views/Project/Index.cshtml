@model RegistaMaster.Domain.DTOModels.Entities.ProjectModel.ProjectDTO
@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
  var user = session.GetUser();
}
<input type="hidden" id="auth" value="@Convert.ToInt32(user.Authorization)" />
<input type="hidden" id="ID" value="@user.ID" />
<h1>Projeler</h1>

<style>


</style>
<link href="/Modernize/DevextremeCss/css/dx.common.css" rel="stylesheet" />
<link href="~/Modernize/DevextremeCss/css/dx.light.css" rel="stylesheet" />

<div class="main-content">
  <div class="row">
    <div class="col-12" style="padding-top: 40px; padding-right: 40px; padding-left: 40px;">
      <div class="card card-primary">
        <div class="card-content collapse show">
          <div class="card-body card-dashboard">
            <h3>Projeler</h3>
            <div class="demo-container">
              <div id="projectGridContainer"></div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<!--Proje Ekle/Düzenle Modal-->
<div class="modal fade" id="ProjectModal" aria-labelledby="ProjectModalLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="clear">
      <div class="modal-header">
        <h3 class="modal-title" id="ProjectModalLabel"></h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" id="CloseModal" onclick="ClearModal()" aria-label="Close"></button>
      </div>
      <hr />
      <div class="modal-body">
        <form>
          <div class="row">
            <div class="col-12">
              <input class="form-control" type="hidden" id="ProjectID" />
              <label style="font-weight:bold;">Adı: <span class="text-danger">*</span></label>
              <input class="form-control mt-2" id="ProjectName" />
            </div>
            <div class="col-12 mt-3">
              <label style="font-weight:bold;">Açıklama</label>
              <textarea class="form-control mt-2" id="ProjectDescription" rows="4"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" data-bs-dismiss="modal" onclick="ClearModal()" class="btn btn-secondary">Kapat</button>
        <button type="button" onclick="SaveProject()" class="btn btn-primary">Kaydet</button>
      </div>
    </div>
  </div>
</div>

<!--Proje Notu Ekle Modal-->
<div class="modal fade" id="AddProjectNote" aria-labelledby="AddProjectNoteLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="clear">
      <div class="modal-header">
        <h3 class="modal-title" id="AddProjectNoteLabel">Proje Notu Ekle</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="ClearModal()" aria-label="Close"></button>
      </div>
      <hr />
      <div class="modal-body">
        <form>
          <div class="row">
            <input class="form-control" type="hidden" id="addProjectNoteProjectID" />
            <div class="col-12">
              <label style="font-weight:bold;">Konu:<span class="text-danger">*</span></label>
              <input class="form-control mt-2" id="addNoteType" />
            </div>
            <div class="col-12 mt-3">
              <label style="font-weight:bold;">Açıklama:<span class="text-danger">*</span></label>
              <textarea class="form-control mt-2" id="addDescription" rows="4"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="ClearModal()" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
        <button type="button" onclick="SaveProjectNote()" class="btn btn-primary">Kaydet</button>
      </div>
    </div>
  </div>
</div>


<!--Proje Notu Detay Modal-->
<div class="modal fade" id="DetailProjectNote" aria-labelledby="DetailProjectNoteLabel" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="clear">
      <div class="modal-header">
        <h3 class="modal-title" id="DetailProjectNoteLabel">Proje Notu Detay</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <hr />
      <div class="modal-body">
        <form>
          <div class="row">
            <input class="form-control" type="hidden" id="detailProjectNoteID" />
            <div class="col-6">
              <label style="font-weight:bold;">Ekleyen Kişi</label>
              <select class="form-control mt-2" disabled asp-items="@ViewBag.CreatedBy" id="detailCreatedBy"></select>
            </div>
            <div class="col-6">
              <label style="font-weight:bold;">Eklenme Tarihi</label>
              <input class="form-control mt-2" readonly id="detailDate" />
            </div>
            <div class="col-12 mt-3">
              <label style="font-weight:bold;">Konu</label>
              <input class="form-control mt-2" readonly id="detailNoteType" />
            </div>
            <div class="col-12 mt-3">
              <label style="font-weight:bold;">Açıklama</label>
              <textarea class="form-control mt-2" readonly id="detailDescription" rows="4"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" id="saveButton" onclick="SaveEdit()" class="btn btn-primary invisible">Kaydet</button>
        <button type="button" id="editButton" onclick="OpenToEdit()" class="btn btn-info invisible">Düzenle</button>
        <button type="button" onclick="CloseDetailModal()" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
      </div>
    </div>
  </div>
</div>


<!--Modül Ekle/Düzenle Modal-->
<div class="modal fade" id="AddModule" aria-labelledby="AddModuleLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="clear">
      <div class="modal-header">
        <h3 class="modal-title" id="AddModuleLabel">Modül Ekle</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="ClearModal()" aria-label="Close"></button>
      </div>
      <hr />
      <div class="modal-body">
        <form>
          <div class="row">
            <input class="form-control" type="hidden" id="addModuleProjectID" />
            <div class="col-12">
              <label style="font-weight:bold;">Adı:<span class="text-danger">*</span></label>
              <input class="form-control mt-2" id="addModuleName" />
            </div>
            <div class="col-12 mt-3">
              <label style="font-weight:bold;">Açıklama</label>
              <textarea class="form-control mt-2" id="addModuleDescription" rows="4"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="ClearModal()" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
        <button type="button" onclick="SaveModul()" class="btn btn-primary">Kaydet</button>
      </div>
    </div>
  </div>
</div>

<!--Versiyon Ekle/Düzenle Modal-->
<div class="modal fade" id="AddVersion" aria-labelledby="AddVersionLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="clear">
      <div class="modal-header">
        <h3 class="modal-title" id="AddVersionLabel">Versiyon Ekle</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="ClearModal()" aria-label="Close"></button>
      </div>
      <hr />
      <div class="modal-body">
        <form>
          <div class="row">
            <input class="form-control" type="hidden" id="addVersionProjectID" />
            <div class="col-12">
              <label style="font-weight:bold;">Açıklama:<span class="text-danger">*</span></label>
              <textarea class="form-control mt-2" id="addVersionDescription" rows="4"></textarea>
            </div>
            <div class="d-flex justify-content-around mt-3">
              <div class="form-check col-6">
                <label style="font-weight:bold;" class="form-check-label" for="addVersionDatabaseChange">
                  Veri Tabanı Değişikliği
                </label>
                <input class="form-check-input" type="checkbox" value="" id="addVersionDatabaseChange">
              </div>
              <div class="form-check col-6">
                <label style="font-weight:bold;" class="form-check-label" for="addVersionNewVersion">
                  Yeni Versiyon
                </label>
                <input class="form-check-input" type="checkbox" value="" id="addVersionNewVersion">
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="ClearModal()" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
        <button type="button" onclick="SaveVersion()" class="btn btn-primary">Kaydet</button>
      </div>
    </div>
  </div>
</div>


<!--Modül Detay Modal-->
<div class="modal fade" id="DetailModule" aria-labelledby="DetailModuleLabel" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="clear">
      <div class="modal-header">
        <h3 class="modal-title" id="DetailModuleLabel">Modül Detay</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <hr />
      <div class="modal-body">
        <form>
          <div class="row">
            <input class="form-control" type="hidden" id="DetailModuleID" />
            <input class="form-control" type="hidden" id="DetailModuleProjectID" />
            <div class="col-12">
              <label class="mb-2" style="font-weight:bold;">Proje</label>
              <select asp-for="ProjectID" onchange="GetSelectListEdit()" asp-items="@Model.Project" id="DetailModuleProjectName" class="form-control select2" name="ProjectID">
                <option selected="selected" value="0">Lütfen Seçiniz</option>
              </select>
            </div>
            <div class="col-12">
              <label style="font-weight:bold;">Adı</label>
              <input class="form-control mt-2" id="DetailModuleName" />
            </div>
            <div class="col-12 mt-3">
              <label style="font-weight:bold;">Açıklama</label>
              <textarea class="form-control mt-2" id="DetailModuleDescription" rows="4"></textarea>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" id="saveButtonModule" onclick="openPopupEditModuleSave()" class="btn btn-primary invisible">Kaydet</button>
        <button type="button" id="editButtonModule" onclick="openPopupEditModuleModal()" class="btn btn-info invisible">Düzenle</button>
        <button type="button" onclick="CloseDetailModal()" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
      </div>
    </div>
  </div>
</div>

<!--Versiyon Detay Modal-->
<div class="modal fade" id="DetailVersion" aria-labelledby="DetailModuleLabel" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="clear">
      <div class="modal-header">
        <h3 class="modal-title" id="DetailModuleLabel">Versiyon Detay</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <hr />
      <div class="modal-body">
        <form>
          <div class="row">
            <input class="form-control" type="hidden" id="DetailVersionID" />
            <input class="form-control" type="hidden" id="DetailVersionDate" />
            <input class="form-control" type="hidden" id="DetailVersionProjectID" />
            <div class="col-12">
              <select asp-for="ProjectID" onchange="GetSelectListEdit()" asp-items="@Model.Project" id="DetailVersionProjectName" class="form-control select2" name="ProjectID">
                <option selected="selected" value="0">Lütfen Seçiniz</option>
              </select>
            </div>
            <div class="col-12 mt-3">
              <label style="font-weight:bold;">Açıklama</label>
              <textarea class="form-control mt-2" id="DetailVersionDescription" rows="4"></textarea>
            </div>
          </div>
          <div class="d-flex justify-content-around mt-3">
            <div class="form-check col-6">
              <label style="font-weight:bold;" class="form-check-label" for="DetailVersionDatabaseChange">
                Veri Tabanı Değişikliği
              </label>
              <input class="form-check-input" type="checkbox" value="" id="DetailVersionDatabaseChange">
            </div>
            <div class="form-check col-6">
              <label style="font-weight:bold;" id="DetailVersionNewVersionLabel" class="form-check-label" for="DetailVersionNewVersion">
                Yeni Versiyon
              </label>
              <input class="form-check-input" type="checkbox" value="" id="DetailVersionNewVersion">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" id="saveButtonVersion" onclick="openPopupEditVersionSave()" class="btn btn-primary invisible">Kaydet</button>
        <button type="button" id="editButtonVersion" onclick="openPopupEditVersionModal()" class="btn btn-info invisible">Düzenle</button>
        <button type="button" onclick="CloseDetailModal()" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
      </div>
    </div>
  </div>
</div>
@section Scripts
{

  <script src="~/js/Page/Project/Index.js"></script>


}