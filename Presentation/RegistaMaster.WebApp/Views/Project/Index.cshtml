</div>

<!--Proje Notu Detay Modal-->
<div class="modal fade" id="DetailProjectNote" aria-labelledby="DetailProjectNoteLabel" tabindex="-1" style="display: none;" aria-hidden="true">
   <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content" id="clear">
         <div class="modal-header">
            <h1 class="modal-title fs-5" id="DetailProjectNoteLabel">Proje Notu Detay</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" id="CloseModal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
            <form>
               <div class="row">
                  <div class="col-6">
                     <label style="font-weight:bold;">Not Ekleyen</label>
                     <input class="form-control" readonly id="detailAddedUser" />
                  </div>
                  <div class="col-6">
                     <label style="font-weight:bold;">Not Ekleme Tarihi</label>
                     <input class="form-control" readonly id="detailDate" />
                  </div>
                  <div class="col-12 mt-2">
                     <label style="font-weight:bold;">Not Konusu</label>
                     <input class="form-control" readonly id="detailNoteType" />
                  </div>
                  <div class="col-12 mt-2">
                     <label style="font-weight:bold;">Not Açıklama</label>
                     <textarea class="form-control" readonly id="detailDescription" rows="4"></textarea>
                  </div>
               </div>
            </form>
         </div>
         <div class="modal-footer">
            <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
         </div>
      </div>
   </div>
</div>



