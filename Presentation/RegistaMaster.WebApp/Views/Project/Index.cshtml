            <form>
               <div class="row">
                  <input class="form-control" type="hidden" id="addProjectID" />
                  <div class="col-12">
                     <label style="font-weight:bold;">Not Konusu</label>
                     <input class="form-control" id="addNoteType" />
                  </div>
                  <div class="col-12 mt-2">
                     <label style="font-weight:bold;">Not Açıklama</label>
                     <textarea class="form-control" id="addDescription" rows="4"></textarea>
                  </div>
               </div>
            </form>
         </div>
         <div class="modal-footer">
            <button type="button" onclick="ClearModal()" data-bs-dismiss="modal" class="btn btn-secondary">Kapat</button>
            <button type="button" onclick="SaveProjectNote()" class="btn btn-primary">Kaydet</button>
         </div>
      </div>
   </div>
</div>


<!--Proje Notu Düzenle Modal-->
<div class="modal fade" id="EditProjectNote" aria-labelledby="EditProjectNoteLabel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" style="display: none;" aria-hidden="true">
   <div class="modal-dialog modal-lg modal-dialog-centered">
