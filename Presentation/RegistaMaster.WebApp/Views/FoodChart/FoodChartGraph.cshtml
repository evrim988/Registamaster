@{
  ViewData["Title"] = "FoodChartGraph";
}
<h1>Ofis Yönetin Dashboard</h1>
<div class="main-content">
  <div class="row">
    <div class="col-12" style="padding-top: 40px; padding-right: 40px; padding-left: 40px;">
      <h3>Yemek Çizelgesi Grafiği</h3>
      <hr />
      <div class="form-group d-flex align-items-center">
        <label for="year" class="form-label" style="white-space: nowrap; font-size: 18px; margin-right: 10px;">Yıl Seçimi:</label>
        <select id="year" class="form-select form-select-lg mb-3 mr-2"></select>
      </div>
      <hr />

      <!-- Styles -->
      <style>
        #chartdiv {
          width: 100%;
          height: 500px;
          margin-top: 50px;
        }
      </style>

      <!-- Resources -->
      <script src="https://cdn.amcharts.com/lib/5/index.js"></script>
      <script src="https://cdn.amcharts.com/lib/5/xy.js"></script>
      <script src="https://cdn.amcharts.com/lib/5/themes/Animated.js"></script>



      <div id="chartdiv"></div>

    </div>
  </div>
</div>
</div>


@section scripts {
  <script src="/js/Page/FoodChart/FoodChartGraph.js"></script>
}
